<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/base_color_main_background"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context=".MainActivity"
        tools:showIn="@layout/activity_main">

        <RelativeLayout
            android:id="@+id/relativeLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin">

            <RelativeLayout
                android:id="@+id/mainTitleRelativeLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:background="@color/colorMainTitle_red">

                <TextView
                    android:id="@+id/tv_mainTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="@dimen/activity_vertical_margin"
                    android:text="@string/mainTitle"
                    android:textColor="@color/textColor_white"
                    android:textSize="@dimen/font_size_big" />
            </RelativeLayout>

            <TextView
                android:id="@+id/description1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/mainTitleRelativeLayout"
                android:layout_marginTop="20dp"
                android:text="@string/description1"
                android:textColor="@color/textColor_gray"
                android:textSize="@dimen/font_size_normal" />

            <Button
                android:id="@+id/btn_tryYesGraph"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/description1"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:backgroundTint="@color/colorPrimary"
                android:text="@string/btn_tryYesGraph"
                android:textColor="@color/textColor_white"
                android:textSize="@dimen/font_size_normal" />

            <Button
                android:id="@+id/btn_export_contacts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btn_tryYesGraph"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:backgroundTint="@color/colorPrimary"
                android:text="Export Contacts"
                android:textColor="@color/textColor_white"
                android:textSize="@dimen/font_size_normal" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativeLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/relativeLayout1"
            android:background="@color/base_color_main_background_dark"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin">

            <RelativeLayout
                android:id="@+id/title2RelativeLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:background="@color/colorMainTitle_red">

                <TextView
                    android:id="@+id/tv_title2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="@dimen/activity_vertical_margin"
                    android:text="@string/title2"
                    android:textColor="@color/textColor_white"
                    android:textSize="@dimen/font_size_big" />
            </RelativeLayout>

            <TextView
                android:id="@+id/description2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/title2RelativeLayout"
                android:layout_marginTop="20dp"
                android:text="@string/description2"
                android:textColor="@color/textColor_bright_gray"
                android:textSize="@dimen/font_size_normal" />

            <Button
                android:id="@+id/btn_tryYesGraph2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/description2"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:backgroundTint="@color/colorPrimary"
                android:text="@string/btn_tryYesGraph"
                android:textColor="@color/textColor_white"
                android:textSize="@dimen/font_size_normal" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativeLayout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:layout_below="@+id/relativeLayout2">

            <RelativeLayout
                android:id="@+id/title3RelativeLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:background="@color/colorMainTitle_red">

                <TextView
                    android:id="@+id/tv_title3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="@dimen/activity_vertical_margin"
                    android:text="@string/title3"
                    android:textColor="@color/textColor_white"
                    android:textSize="@dimen/font_size_big" />
            </RelativeLayout>

            <TextView
                android:id="@+id/description3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/title3RelativeLayout"
                android:layout_marginTop="20dp"
                android:text="@string/description3"
                android:textColor="@color/textColor_gray"
                android:textSize="@dimen/font_size_normal" />

            <Button
                android:id="@+id/btn_tryYesGraph3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/description3"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:backgroundTint="@color/colorPrimary"
                android:text="@string/btn_tryYesGraph"
                android:textColor="@color/textColor_white"
                android:textSize="@dimen/font_size_normal" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativeLayout4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/relativeLayout3"
            android:background="@color/base_color_main_background_dark"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin">

            <RelativeLayout
                android:id="@+id/title4RelativeLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:background="@color/colorMainTitle_red">

                <TextView
                    android:id="@+id/tv_title4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="@dimen/activity_vertical_margin"
                    android:text="@string/title4"
                    android:textColor="@color/textColor_white"
                    android:textSize="@dimen/font_size_big" />
            </RelativeLayout>

            <TextView
                android:id="@+id/description4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/title4RelativeLayout"
                android:layout_marginTop="20dp"
                android:text="@string/description4"
                android:textColor="@color/textColor_bright_gray"
                android:textSize="@dimen/font_size_normal" />

            <Button
                android:id="@+id/btn_tryYesGraph4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/description4"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:backgroundTint="@color/colorPrimary"
                android:text="@string/btn_tryYesGraph"
                android:textColor="@color/textColor_white"
                android:textSize="@dimen/font_size_normal" />

            <TextView
                android:id="@+id/description5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btn_tryYesGraph4"
                android:layout_marginTop="20dp"
                android:text="@string/description5"
                android:textColor="@color/textColor_bright_gray"
                android:textSize="@dimen/font_size_normal" />

            <TextView
                android:id="@+id/description5_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/description5"
                android:layout_below="@+id/btn_tryYesGraph4"
                android:layout_marginTop="20dp"
                android:text="@string/description5_1"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/font_size_normal"
                android:paddingLeft="5dp"/>

            <TextView
                android:id="@+id/description5_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/description5"
                android:text="@string/description5_2"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/font_size_normal"/>

            <TextView
                android:id="@+id/description5_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/description5_2"
                android:text="@string/description5_3"
                android:textSize="@dimen/font_size_normal"/>

            <TextView
                android:id="@+id/description5_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/description5_3"
                android:layout_marginTop="20dp"
                android:text="@string/description5_4"
                android:textSize="@dimen/font_size_normal"
                android:layout_marginBottom="20dp"/>

        </RelativeLayout>

    </RelativeLayout>

</ScrollView>
